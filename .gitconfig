[user]
    name = Lento Manickathan
    email = lento.manickathan@gmail.com
[filter "lfs"]
    smudge = git-lfs smudge -- %f
    process = git-lfs filter-process
    required = true
    clean = git-lfs clean -- %f
[core]
    editor = nvim
[credential]
    helper = cache --timeout=36000
[commit]
    gpgsign = true
[color "status"]
    changed = yellow
    untracked = blue
[init]
    defaultBranch = main
[diff]
    tool = vimdiff
[difftool]
    prompt = false
[alias]
    d = difftool
[gpg]
    format = ssh
[gpg "ssh"]
    program = /opt/1Password/op-ssh-sign
[rebase]
    updateRefs = true

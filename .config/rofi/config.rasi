@theme "gruvbox-dark-hard"

configuration {
  show-icons: true;
  drun-display-format: "{name}";
  modes: [ combi ];
  combi-modes: [ drun, window ];
  location: 0;
}

window {
    transparency: "real";
  // background-color: @bg;
  // text-color: @text;
  // border-color: @border;
    border: 2px;
    border-radius: 10px;
    width: 900px;
    anchor: center;
    x-offset: 0;
    y-offset: 0;
}




# macOS
if [[ "$OSTYPE" = darwin* ]]; then
    # Languages
    export LC_ALL=en_US.UTF-8
    export LANG=en_US.UTF-8
    # Paths
    export PATH=/usr/local/bin:$PATH
    export PATH=/Users/Lento/lib/scripts:$PATH
    export PATH=/opt/local/bin:$PATH
    export LIBRARY_PATH="/opt/local/lib"
    export PATH="$HOME/.cargo/bin:$PATH"
    export PATH=/usr/local/opt/coreutils/libexec/gnubin:$PATH
    export MANPATH="/usr/local/opt/coreutils/libexec/gnuman:$MANPATH"
    # colors
    if [ -x /usr/local/opt/coreutils/libexec/gnubin/dircolors ]; then
        test -r ~/.dircolors && eval "$(dircolors -b ~/.dircolors)" || eval "$(dircolors -b)"
	alias ls='ls --color=auto'
	alias grep='grep --color=auto'
	alias fgrep='fgrep --color=auto'
	alias egrep='egrep --color=auto'
    fi
    # ssh
    export SSH_KEY_PATH='~/.ssh/id_rsa'
    # Python
    export PATH="/Users/Lento/anaconda3/bin:$PATH"
fi

# Python local
#export PATH="~/anaconda3/bin:$PATH"

# vpn
alias vpnconnect='/opt/cisco/anyconnect/bin/vpn connect sslvpn.ethz.ch/'
alias vpndisconnect='/opt/cisco/anyconnect/bin/vpn disconnect'

# connect to cluster
alias hypatia="ssh hypatia"
alias euler="ssh euler"

